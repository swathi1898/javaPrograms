<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" stylesheets="@style.css" fx:id="gridPane">
    <Button text="Button Open.." onMouseClicked="#handleClick" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Button text="Button Two" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Button fx:id="button3" text="Button Three" id="button_three" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
    <Button text="Button Four" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
    <Button text="Button Five" GridPane.rowIndex="0" GridPane.columnIndex="4"/>
    <Label fx:id="label" text="javafx effects" GridPane.rowIndex="1" GridPane.columnIndex="0"
           onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit" />
</GridPane>